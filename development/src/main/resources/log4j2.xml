<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="File" fileName="./log/output.log" bufferedIO="false" advertise="true">

        </File>
    </Appenders>
    <Loggers>
        <Logger name="com.inspire.development.database.connector.SQLite" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="*.*" level="debug" includeLocation="true">
            <AppenderRef ref="File" />
        </Logger>

        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>